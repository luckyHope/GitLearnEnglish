<Window x:Class="LearnEnglish.Views.Vocabulary"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearnEnglish.Views"
        mc:Ignorable="d"
        Title="Vocabulary" WindowStartupLocation="CenterScreen">
    <Grid>
        <ListView Name="WordsList">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=RussianWord}">Русский</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=EnglishWord}">Английский</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Context}">Контекст</GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
