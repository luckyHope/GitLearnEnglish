<Window x:Class="LearnEnglish.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearnEnglish"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="500">
    <Grid>
        <DockPanel VerticalAlignment="Top">
            <Menu>
                <MenuItem Header="Словарь">
                    <MenuItem Header="Открыть словарь"/>
                    <MenuItem Header="Добавить слово"/>
                </MenuItem>
                <MenuItem Header="Настройки">
                </MenuItem>
            </Menu>
        </DockPanel>
        <Label x:Name="LblWorld" Content="Label" Margin="20,96,20,0" VerticalAlignment="Top" Height="40" HorizontalAlignment="Center"/>
        <Button x:Name="BtnNext" Content="Начать" HorizontalAlignment="Center" VerticalAlignment="Center" Width="180" Height="42" Margin="0,150,0,0"/>
    </Grid>
</Window>
